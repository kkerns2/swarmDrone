            <arg name="x" value="-42.0"/>
            <arg name="y" value="40.0"/>
            <arg name="z" value="0.0"/>
        </include>

        <node pkg="rviz" type="rviz" name="rviz" args="-d /home/ubuntu/catkin_ws/src/spawn_mulitple_drones/rviz_cfg/outdoor_cfg_d2.rviz"/>    
