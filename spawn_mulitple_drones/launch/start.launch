<?xml version="1.0"?>
<launch>
    <group ns="drone1">
        <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
            <arg name="name" value ="drone1"/>
            <arg name="tf_prefix" value="drone1"/>
            <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
            <arg name="x" value="0.0"/>
            <arg name="y" value="1.0"/>
            <arg name="z" value="0.0"/>
        </include>
        
        <!-- Start rviz visualization with preset config -->
        
        <node pkg="rviz" type="rviz" name="rviz" args="-d /home/ubuntu/catkin_ws/src/spawn_mulitple_drones/rviz_cfg/outdoor_cfg_d1.rviz"/>

        <!--launch rviz for rtab-->
        <!--node name="rviz" pkg="rviz" type="rviz"  args="-d /home/ubuntu/catkin_ws/src/spawn_mulitple_drones/rviz_cfg/rtab_rviz/main_rviz.rviz"/-->

        <include file = "/home/ubuntu/catkin_ws/src/hector_quadrotor_sim/takeoff_land/launch/takeoff_land.launch">
            <arg name="tf_prefix" value="drone1"/>
        </include>
    </group>

    
    <group ns="drone2">
